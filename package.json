{
  "name": "vite-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "vite": "vite",
    "dev": "nodemon src/server/main.ts -w src/server",
    "start": "NODE_ENV=production ts-node src/server/main.ts",
    "build": "vite build",
    "preview": "vite build && NODE_ENV=production ts-node src/server/main.ts",
    "seeds": "ts-node src/server/seeds/index.ts",
    "lint": "eslint --fix -f table './**/*.ts'",
    "lint-staged": "lint-staged",
    "prettier-format": "prettier --config .prettierrc './**/*.{ts,css,scss,json}' --write",
    "test": "vitest --run --reporter verbose",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "./**/*.ts": [
      "prettier --write",
      "eslint --fix -f table"
    ],
    "./**/*.{css,json}": "prettier --write"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/express": "^4.17.15",
    "@types/express-session": "^1.17.7",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.11.18",
    "@types/passport-local": "^1.0.35",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-formatter-table": "^7.32.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "express-session": "^1.17.3",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.20",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "vite": "^4.2.2",
    "vitest": "^0.32.2",
    "zod": "^3.21.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.4",
    "sass": "^1.62.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite-express": "^0.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
