{
  "name": "vite-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "vite": "vite",
    "dev": "nodemon src/server/main.ts -w src/server",
    "start": "NODE_ENV=production ts-node src/server/main.ts",
    "build": "vite build",
    "preview": "vite build && NODE_ENV=production ts-node src/server/main.ts",
    "lint": "eslint --fix -f table './**/*.ts'",
    "lint-staged": "lint-staged",
    "prettier-format": "prettier --config .prettierrc './**/*.{ts,css,scss,json}' --write"
  },
  "lint-staged": {
    "./**/*.ts": [
      "prettier --write",
      "eslint --fix -f table"
    ],
    "./**/*.{css,json}": "prettier --write"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-formatter-table": "^7.32.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "vite": "^4.2.2",
    "zod": "^3.21.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.4",
    "sass": "^1.62.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite-express": "^0.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
